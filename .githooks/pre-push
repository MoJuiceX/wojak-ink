#!/bin/sh
# Pre-push hook to prevent pushing directly to main/master
branch="$(git rev-parse --abbrev-ref HEAD)"
if [ "$branch" = "main" ] || [ "$branch" = "master" ]; then
  echo "‚ùå ERROR: Pushing to $branch is blocked."
  echo ""
  echo "To make changes:"
  echo "  1. Create a feature branch: git checkout -b feat/your-feature"
  echo "  2. Make your changes and commit"
  echo "  3. Push the feature branch: git push -u origin feat/your-feature"
  echo "  4. Open a Pull Request on GitHub to merge into main"
  echo ""
  exit 1
fi
exit 0

